@using Orchard.Scheduler.ViewModels
@model SchedulerIndexViewModel
@{
    Style.Include("scheduler.css");

    var index = 0;

    var pageSizes = new List<int?>() { 10, 50, 100 };
    var defaultPageSize = WorkContext.CurrentSite.PageSize;
    if (!pageSizes.Contains(defaultPageSize))
    {
        pageSizes.Add(defaultPageSize);
    }
}
<h1>@Html.TitleForPage(T("Manage Schedules").ToString())</h1>
@using (Html.BeginFormAntiForgeryPost()) { 
    @Html.ValidationSummary()
    <div class="manage">@Html.ActionLink(T("Add a new Schedule").ToString(), "Create", new { }, new { @class = "button primaryAction" })</div>

    <fieldset class="bulk-actions">
        <label for="publishActions">@T("Actions:")</label>
        <select id="publishActions" name="@Html.NameOf(m => m.Options.BulkAction)">
            @Html.SelectOption(Model.Options.BulkAction, SchedulerBulkAction.None, T("Choose action...").ToString())
            @Html.SelectOption(Model.Options.BulkAction, SchedulerBulkAction.Enable, T("Enable").ToString()) 
            @Html.SelectOption(Model.Options.BulkAction, SchedulerBulkAction.Disable, T("Disable").ToString())
            @Html.SelectOption(Model.Options.BulkAction, SchedulerBulkAction.Delete, T("Delete").ToString())
        </select>
        <button type="submit" name="submit.BulkEdit" value="@T("Apply")">@T("Apply")</button>
    </fieldset>
    <fieldset class="bulk-actions">
		<label for="filterResults">@T("Sort by:")</label>
        <select id="filterResults" name="@Html.NameOf(m => m.Options.Order)">
            @Html.SelectOption(Model.Options.Order, SchedulerOrder.Name, T("Name").ToString())
        </select>
		<input type="hidden" name="Page" value="1" />
		<label for="pageSize">@T("Show:")</label>
		<select id="pageSize" name="PageSize">
			@Html.SelectOption((int)Model.Pager.PageSize, 0, T("All").ToString())
			@foreach(int size in pageSizes.OrderBy(p => p)) {
				@Html.SelectOption((int)Model.Pager.PageSize, size, size.ToString())
			}
		</select>
        <button type="submit" name="submit.Filter" value="@T("Filter")">@T("Filter")</button>
    </fieldset>
    <fieldset>		
        <table class="items">
            <thead>
                <tr>
                    <th scope="col">&nbsp;&darr;</th>
                    <th scope="col">@T("Name")</th>
                    <th scope="col">@T("Start")</th>
                    <th scope="col">@T("End")</th>
                    <th scope="col">@T("Next Occurrence")</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            @foreach (var entry in Model.Schedules) {
			<tr>
                <td class="status-@(entry.Record.Enabled ? "enabled" : "disabled")">
                    <input type="hidden" value="record.Id" name="@Html.NameOf(m => m.Schedules[index].Record.Id)"/>
                    <input type="checkbox" value="true" name="@Html.NameOf(m => m.Schedules[index].IsChecked)"/>
                </td>
                <td>
                    @Html.ActionLink(entry.Record.Name, "Edit", new { entry.Record.Id }) 
                </td>
                <td>
                    @entry.Record.StartDateUtc.ToString()
                </td>
                <td>
                    @if (entry.Record.EndDateUtc.HasValue)
                    {
					    @entry.Record.EndDateUtc.Value.ToString()
                    }
                    else
                    {
                        @T("Ongoing")
                    }
                </td>
                <td>
                    @if (entry.Record.NextOccurrenceUtc.HasValue)
                    {
					    @entry.Record.NextOccurrenceUtc.Value.ToString()
                    }
                    else
                    {
                        <text>&nbsp;</text>
                    }
                </td>
                <td>
                    @Html.ActionLink(T("Edit").ToString(), "Edit", new { entry.Record.Id }) |
                    @Html.ActionLink(T("Delete").ToString(), "Delete", new { entry.Record.Id }, new { itemprop = "RemoveUrl UnsafeUrl" }) |
                    @if (!entry.Record.Enabled)
                    {
                        @Html.ActionLink(T("Enable").ToString(), "Enable", new { entry.Record.Id })
                    }
                    else
                    {
                        @Html.ActionLink(T("Disable").ToString(), "Disable", new { entry.Record.Id })
                    }
                </td>
            </tr>
                index++;
            }
        </table>
	@Display(Model.Pager)
    </fieldset>
}